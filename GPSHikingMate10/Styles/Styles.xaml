        <Setter Property="IsDoubleTapEnabled" Value="False"/>
        <Setter Property="IsHoldingEnabled" Value="False"/>
        <Setter Property="IsRightTapEnabled" Value="False"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Width" Value="{StaticResource AppBarButtonWidth}"/>
        <!--<Setter Property="Margin" Value="{StaticResource Thickness2}"/>-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="AppBarButton">
                    <Grid x:Name="RootGrid" Width="{TemplateBinding Width}" Background="Transparent">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="ApplicationViewStates">
